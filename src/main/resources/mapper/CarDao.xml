<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.wuliu.dao.CarDao">

    <resultMap type="com.example.wuliu.entity.Car" id="CarMap">
        <result property="area" column="area" jdbcType="VARCHAR"/>
        <result property="destination" column="destination" jdbcType="VARCHAR"/>
        <result property="cid" column="cid" jdbcType="INTEGER"/>
        <result property="carnum" column="carnum" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
    </resultMap>
    <!--查询单个-->
    <select id="queryById" resultMap="CarMap">
        select area,
               destination,
               cid,
               carnum,
               status
        from car
        where cid = #{cid}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="cid" useGeneratedKeys="true">
        insert into car(area, destination, carnum, status)
        values (#{area}, #{destination}, #{carnum}, #{status})
    </insert>

    <insert id="insertBatch" keyProperty="cid" useGeneratedKeys="true">
        insert into car(area, destination, carnum, status)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.area}, #{entity.destination}, #{entity.carnum}, #{entity.status})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="cid" useGeneratedKeys="true">
        insert into car(area, destination, carnum, status)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.area}, #{entity.destination}, #{entity.carnum}, #{entity.status})
        </foreach>
        on duplicate key update
        area = values(area),
        destination = values(destination),
        carnum = values(carnum),
        status = values(status)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update car
        <set>
            <if test="area != null and area != ''">
                area = #{area},
            </if>
            <if test="destination != null and destination != ''">
                destination = #{destination},
            </if>
            <if test="carnum != null and carnum != ''">
                carnum = #{carnum},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
        </set>
        where cid = #{cid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from car
        where cid = #{cid}
    </delete>

    <select id="getAll" resultMap="CarMap">
        select
        area,
        destination,
        cid,
        carnum,
        status
        from car
        <where>
            <if test="status!=null and status!=''">
                and status = #{status}
            </if>
            <if test="carnum!=null and carnum!=''">
                and carnum like '%${carnum}%'
            </if>

        </where>
    </select>

</mapper>

