<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.wuliu.dao.TraninfoDao">

    <resultMap type="com.example.wuliu.entity.Traninfo" id="TraninfoMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="starttime" column="startTime" jdbcType="TIMESTAMP"/>
        <result property="tntnumber" column="tntnumber" jdbcType="VARCHAR"/>
        <result property="carnum" column="carnum" jdbcType="VARCHAR"/>
        <result property="arrivetime" column="arriveTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TraninfoMap">
        select id,
               startTime,
               tntnumber,
               carnum,
               arriveTime
        from traninfo
        where id = #{id}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into traninfo(startTime, tntnumber, carnum, arriveTime)
        values (#{starttime}, #{tntnumber}, #{carnum}, #{arrivetime})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into traninfo(startTime, tntnumber, carnum, arriveTime)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.starttime}, #{entity.tntnumber}, #{entity.carnum}, #{entity.arrivetime})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into traninfo(startTime, tntnumber, carnum, arriveTime)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.starttime}, #{entity.tntnumber}, #{entity.carnum}, #{entity.arrivetime})
        </foreach>
        on duplicate key update
        startTime = values(startTime),
        tntnumber = values(tntnumber),
        carnum = values(carnum),
        arriveTime = values(arriveTime)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update traninfo
        <set>
            <if test="starttime != null">
                startTime = #{starttime},
            </if>
            <if test="tntnumber != null and tntnumber != ''">
                tntnumber = #{tntnumber},
            </if>
            <if test="carnum != null and carnum != ''">
                carnum = #{carnum},
            </if>
            <if test="arrivetime != null">
                arriveTime = #{arrivetime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from traninfo
        where id = #{id}
    </delete>

    <select id="getAll" resultMap="TraninfoMap">
        select $allSqlColumn()
        from wuliu.traninfo
    </select>

</mapper>

