<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.wuliu.dao.ProcalamationDao">

    <resultMap type="com.example.wuliu.entity.Procalamation" id="ProcalamationMap">
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="protime" column="protime" jdbcType="TIMESTAMP"/>
        <result property="pid" column="pid" jdbcType="INTEGER"/>
    </resultMap>
    <!--查询单个-->
    <select id="queryById" resultMap="ProcalamationMap">
        select content,
               title,
               protime,
               pid
        from procalamation
        where pid = #{pid}
    </select>
    <!--查询最新公告-->
    <select id="newNotice" resultMap="ProcalamationMap">
        select content,
               title,
               protime,
               pid
        from procalamation
        order by protime DESC limit 0, 1
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="pid" useGeneratedKeys="true">
        insert into procalamation(content, title, protime)
        values (#{content}, #{title}, #{protime})
    </insert>

    <insert id="insertBatch" keyProperty="pid" useGeneratedKeys="true">
        insert into procalamation(content, title, protime)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.content}, #{entity.title}, #{protime})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="pid" useGeneratedKeys="true">
        insert into procalamation(content, title, protime)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.content}, #{entity.title}, #{protime})
        </foreach>
        on duplicate key update
        content = values(content),
        title = values(title),
        protime = values(protime)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update procalamation
        <set>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="protime != null">
                protime = #{protime},
            </if>
        </set>
        where pid = #{pid}
    </update>
    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from procalamation
        where pid = #{pid}
    </delete>
    <select id="getAll" resultMap="ProcalamationMap">
        select content,title, protime, pid
        from procalamation
        <where>
            <if test="title!=null and title!=''">
                and title like '%' #{title} '%'
            </if>
        </where>
    </select>

</mapper>

